<% layout('layout') %>

<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-12">

    <% if (data.cannot_use_vision) { %>
    <div class="row">
      <div class="col-sm-12">
        <h2 class="text-danger">Cannot use Cloud Vision API</h2>
      </div>
    </div>

    <% } else { %>

    <form method="post" action="/google/detect_label" class="form-horizontal">
      <div class="form-group form-group-sm">
        <label class="col-sm-3 control-label">Cloud Storage Bucket</label>
        <div class="col-sm-9">
          <input type="text" name="bucket" value="" class="form-control">
        </div>
      </div>
      <div class="form-group form-group-sm">
        <label class="col-sm-3 control-label">Cloud Storage Path</label>
        <div class="col-sm-9">
          <input type="text" name="path" value="" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <button type="submit" class="btn btn-info">Submit</button>
        </div>
      </div>
    </form>
    <% } %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <% if (data.error) { %>
    <label>API call Failed</label>
    <pre class="bg-danger"><code><%= data.errorStr %></code></pre>
    <% } %>

    <% if (data.result) { %>
    <label>API call succeeded</label>
    <pre class="bg-success"><code><%= data.resultStr %></code></pre>
    <% } %>
  </div>
</div>

